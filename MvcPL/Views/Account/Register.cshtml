@model MvcPL.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@section Header{
    <h2>Register</h2>
}
@section Body{
    <hr />
    @using(Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()
        <div class="form-group text-center">
            <div class="col-md-12 form-inline">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = "Email" })
            </div>
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            <div class="col-md-12 form-inline">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Password" })
            </div>
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
        </div>
            <div class="form-group text-center">
                <div class="col-md-12 form-inline">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", @placeholder = "Confirm Password" })
                </div>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
            </div>
            <div class="form-group text-center">
                <div class="col-md-12 form-inline">
                   <div class="input-group">
                    </div>
                    <input type="text" class="form-control" placeholder="Select your avatar" id="inputFileVisible">
                    <input type="file" style="display: none" name="Photo" id="inputFile"/>
                    <button class="btn btn-primary" type="button" id="inputFileBtn">Browse</button>
                </div>
            </div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group text-center">
                        <div class="col-md-12 form-inline">
                            <input type="submit" class="btn btn-primary btn-lg btn-inline" value="Register" />
                        </div>
                    </div>

                    }
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/register.js"></script>
}
