
@model MvcPL.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}
@section Header{
    <h2>@ViewBag.Title</h2>
}
@section Body{
    <hr />
    @using(Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center">
            <div class="col-md-12 form-inline">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = "Email" })
            </div>
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group text-center">
            <div class="col-md-12 form-inline">
                @Html.PasswordFor(m => m.Password, new {@class = "form-control input-lg", @placeholder = "Password"})
            </div>
            @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
        </div>
        <div class="form-group text-center">
            <div class="col-md-12 form-inline">
                @Html.LabelFor(m => m.RememberMe, new { @class = "control-label col-md-6" })
                <div class="checkbox col-md-4">
                    @Html.EditorFor(m => m.RememberMe)
                </div>
                @Html.ValidationMessageFor(m => m.RememberMe, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group text-center">
            <div class="col-md-12 form-inline">
                <input type="submit" value="Log in" class="btn btn-primary btn-lg  btn-inline"/>
            </div>
        </div>

                <p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


